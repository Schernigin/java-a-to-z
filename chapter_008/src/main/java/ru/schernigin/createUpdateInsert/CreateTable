CREATE TABLE users (
  id SERIAL PRIMARY KEY ,
  login CHARACTER VARYING (2000),
  password CHARACTER VARYING (2000),
  create_date DATE
);

CREATE TABLE role (
  id SERIAL PRIMARY KEY,
  role CHARACTER VARYING (2000)
);

CREATE TABLE role_rights (
  id SERIAL PRIMARY KEY,

  role_id INTEGER REFERENCES role(id)
);

CREATE TABLE request (
  id SERIAL PRIMARY KEY,
  name_request CHARACTER VARYING (2000),
  descripton TEXT,
  create_data DATE,
  author INTEGER REFERENCES users(id),
  category INTEGER REFERENCES category_request(id),
  comment INTEGER REFERENCES comments_request(id),
  condition INTEGER REFERENCES condition_request(id)
);

CREATE TABLE category_request (
  id SERIAL PRIMARY KEY,
  category CHARACTER VARYING (2000)
);

CREATE TABLE condition_request (
  id SERIAL PRIMARY KEY,
  condition CHARACTER VARYING (2000)
);

CREATE TABLE comments_request (
  id SERIAL PRIMARY KEY,
  comment TEXT,
  attach_file INTEGER REFERENCES attached_files (id),
  author INTEGER REFERENCES users (id),
  create_data DATE
);

CREATE TABLE attached_files (
  id SERIAL PRIMARY KEY,
  link CHARACTER VARYING (2000)
);